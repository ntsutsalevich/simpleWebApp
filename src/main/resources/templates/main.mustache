<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Employees</title>
    <style>
        table {
            border-collapse: collapse;
        }

        table, td, th {
            border: 1px solid #999;
            padding: 5px;
        }
    </style>
    <head>
<body>
<table>
    <tr>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Department ID</th>
        <th>Job title</th>
        <th>Gender</th>
        <th>Date Of Birthday</th>
    </tr>

    {{#employees}}
        <tr>
            <td>{{employeeId}}</td>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{departmentId}}</td>
            <td>{{jobTitle}}</td>
            <td>{{gender}}</td>
            <td>{{dateOfBirth}}</td>
            <td><a href="/delete/{{employeeId}}"/>Delete</td>
            <td><a href="/update/{{employeeId}}"/>Update</td>
        </tr>
    {{/employees}}


</table>
<br>
<br>
<button id="button" onclick="window.location='/addEmployee'">Create employee</button>

<form action="/findById" method="post">
    <input type="text" name="employeeId" placeholder="id">

    <button type="submit" value="OK">Find</button>
</form>




</body>
</html>